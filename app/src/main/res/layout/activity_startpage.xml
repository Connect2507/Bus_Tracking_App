<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.dhruv.bus_tracking_app.startpage"
    android:background="#000000">
    <RelativeLayout
        android:layout_marginTop="90dp"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:background="@drawable/busstart">


    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal"
        android:background="@color/abc_search_url_text_normal"
        >
        <ImageView
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_width="80dp"
            android:src="@drawable/bus1"
            android:layout_height="50dp" />
        <TextView
            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#fffcfdff"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:text="SCHOOL BUS TRACKER"
            android:typeface="sans"
            android:textSize="20dp" />

    </LinearLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/iv"
        android:layout_marginLeft="250dp"
        android:layout_marginTop="500dp"
        android:src="@drawable/rotate1"/>
</RelativeLayout>